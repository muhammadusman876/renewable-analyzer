# Environment Variables for Renewable Energy Analyzer

# API Configuration
API_HOST=localhost
API_PORT=8000
DEBUG=True

# OpenAI API (Optional - for LLM features)
# OPENAI_API_KEY=your_openai_api_key_here

# Weather API Keys (Optional)
# OPENWEATHER_API_KEY=your_openweather_api_key
# METEOSTAT_API_KEY=your_meteostat_api_key

# Database Configuration (if using external DB)
# DATABASE_URL=sqlite:///./renewable_analyzer.db

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO

# EDA Dataset Path (relative to app directory)
EDA_DATASET_PATH=data/processed_eda_data/renewable_weather.csv
